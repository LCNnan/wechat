page{
	height:100%;
	background:#f7f7f7;
	font-family:"微软雅黑";
	font-size:32rpx;
}
.area{
	line-height:100rpx;
	background:#fff;
	color:#ccc;
	padding:0 20rpx;
	display:flex;
	margin-bottom:10rpx;
}
.area-title{
	margin-right:40rpx;
	width:30%;
}
input{
	height:100rpx;
}
input::-webkit-input-placeholder{
	line-height:100rpx;
	color:#ccc;
	font-size:32rpx;
}
.btn{
	/*margin:10rpx;*/
	width:95%;
	height:80rpx;
	line-height:80rpx;
	text-align:center;
	color:#fff;
	background:orange;
	border-radius:10rpx;
	margin:20rpx auto;
}
.wrapper{
	text-align:center;
	color:#03bbd5;
}
.succ-title{
	display:flex;
	align-items:center;
	justify-content:center;
	margin-top:20rpx;
}
.succ-item{
	line-height:80rpx;
}